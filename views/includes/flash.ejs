<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-2 mt-4 position-fixed" role="alert" style="z-index: 10 !important;">
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <% if(error && error.length) { %>
            <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 position-fixed mt-2 z-index-50" role="alert">
                <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %> 